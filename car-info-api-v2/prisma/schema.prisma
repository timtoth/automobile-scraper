generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  name      String?
  cars      CarInfo[]
  created   DateTime @default(now())
  role      Role @relation(fields: [roleId], references: [id])
  roleId    Int
}

model CarInfo {
  id        Int     @id @default(autoincrement())
  make      String
  model     String
  year      Int
  created   DateTime @default(now())
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
}

model Role {
  id      Int @id @default(autoincrement())
  name    String @unique
  users   User[]
}

model RequestLog {
  id        Int @id @default(autoincrement())
  path      String
  severity  Int
  message   String
  created   DateTime @default(now())
  userId    Int
}