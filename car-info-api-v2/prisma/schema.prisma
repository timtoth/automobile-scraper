generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts CarInfo[]
  roles Role[]
  created DateTime @default(now())
}

model CarInfo {
  id        Int     @id @default(autoincrement())
  make      String
  model     String
  year      Int
  created DateTime @default(now())
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
}

model Role {
  id Int @id @default(autoincrement())
  name String @unique
  user User @relation(fields: [userId], references: [id])
  userId Int
}